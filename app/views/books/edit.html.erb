<h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model:@book, local: true do |book| %>

  <div class = "field">
    <label for ="book_title">Title</label>
    <p class ="book_title"><%= book.text_field :title %></p>
  </div>

  <div class = "field">
    <label for ="book_body">Body</label>
    <p class ="book_body"><%= book.text_area :body %></p>
  </div>

  <div class ="actions">
    <%= book.submit 'Update Book' %>
  </div>

    <%= link_to "show", book_path(@book.id) %>|
    <%= link_to "back", books_path %>

<% end %>
